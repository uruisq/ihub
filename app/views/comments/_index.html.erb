<p id="comment"></p>
<% comments.each do |comment| %>
  <% if comment.id.present? %>
    <p>
      <%= image_tag "/icon/#{comment.user_id}.svg", :size =>'30x30' %>　
      <%= comment.user.name %>　
      <%= comment.content %>
    </p>
    <% if user_signed_in? %>
      <% if comment.user_id == current_user.id %>
        <%= link_to '編集', edit_feed_comment_path(comment.feed, comment), remote:true %>
        <%= link_to '削除', [comment.feed, comment], method: :delete, remote: true %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
<p id="error_massage"></p>